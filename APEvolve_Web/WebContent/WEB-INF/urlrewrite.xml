<?xml version="1.0" encoding="utf-8"?>
 
<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
 

<urlrewrite>
  <rule>
    <from>^/?([a-z]+)$</from>
    <to>/$1.jsp</to>
  </rule>
  
  <outbound-rule>
    <from>^/?([a-z]+)(.(jsp|jspx))$</from>
    <to>$1</to>
  </outbound-rule>
  
</urlrewrite>